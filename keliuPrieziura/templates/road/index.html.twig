{% extends 'base.html.twig' %}

{% block title %}Road index{% endblock %}

{% block body %}
    <h1>Road index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Number</th>
                <th>Level</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for road in roads %}
            <tr>
                <td>{{ road.id }}</td>
                <td>{{ road.name }}</td>
                <td>{{ road.number }}</td>
                <td>{{ road.level }}</td>
                <td>
                    <a href="{{ path('road_show', {'id': road.id}) }}">show</a>
                    <a href="{{ path('road_edit', {'id': road.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('road_new') }}">Create new</a>
{% endblock %}
